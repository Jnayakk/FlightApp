<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:text="Flight Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flightnumText"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/originText"
        android:layout_below="@+id/flightnumText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/view"
        android:layout_toStartOf="@+id/view"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"/>

    <TextView
        android:text="Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destinationText"
        android:layout_below="@+id/flightnumText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_toRightOf="@+id/view"
        android:layout_toEndOf="@+id/view"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center" />

    <TextView
        android:text="Departure Date and Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/originText"
        android:id="@+id/departuredateText"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:text="Arrival Date and Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destinationText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/arrivaldateText"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow_shape"
        android:id="@+id/arrowShape"
        android:layout_alignBottom="@+id/arrivaldateText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Flight Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/flightnameText"
        android:textColor="@android:color/black" />


    <TextView
        android:text="Travel Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/traveltimeText"
        android:layout_below="@+id/greylineText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greylineText"
        android:layout_alignRight="@+id/greylineText"
        android:layout_alignEnd="@+id/greylineText"
        android:id="@+id/priceText"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/greylineText"
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingTop="1dip"
        android:gravity="center_horizontal"
        android:layout_below="@+id/departuredateText"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/airplane"
    tools:context="cs.b07.cscb07courseproject.CreatePassActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ccNum_text"
        android:layout_alignStart="@+id/ccNum_text"
        android:id="@+id/expire_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ccNum_text"
        android:layout_above="@+id/expire_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="45dp" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ccNum_word"
        android:layout_alignBaseline="@+id/ccNum_text"
        android:layout_alignBottom="@+id/ccNum_text"
        android:layout_toLeftOf="@+id/ccNum_text"
        android:layout_toStartOf="@+id/ccNum_text"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <TextView
        android:text="Verify:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expire_word"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ccNum_word"
        android:layout_alignStart="@+id/ccNum_word" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expire_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/save"
        android:onClick="Save"
        android:clickable="true"/>

</RelativeLayout>
